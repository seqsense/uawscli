{
    "extends": [
        "config:base",
        "schedule:weekends"
    ],
    "postUpdateOptions": [
        "gomodTidy"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "^golang.org/x/"
            ],
            "schedule": [
                "on the first day of the month"
            ]
        },
        {
            "matchPackagePatterns": [
                "^github.com/aws/aws-sdk-go$"
            ],
            "separateMinorPatch": true,
            "patch": {
                "automerge": true
            }
        },
        {
            "matchPackagePatterns": [
                "^github.com/seqsense/"
            ],
            "schedule": [
                "at any time"
            ]
        }
    ],
    "timezone": "Asia/Tokyo"
}
